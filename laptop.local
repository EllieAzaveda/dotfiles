#!/bin/sh

brew bundle --file=- <<EOF
cask "spotify"
cask "iterm2"
cask "google-chrome"
cask "visual-studio-code"
cask "firefox"
cask "ngrok"
cask "chromedriver"
cask "docker"
cask "linear-linear"
cask "postman"
cask "slack"

brew "poppler"
brew "antiword"
brew "gnumeric"
brew "geckodriver"
brew "rcm"
EOF

fancy_echo "Cleaning up old Homebrew formulae ..."
brew cleanup
brew cask cleanup

if [ -r "$HOME/.rcrc" ]; then
  fancy_echo "Updating dotfiles ..."
  rcup
fi
